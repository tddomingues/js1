/*1) Escreva um algoritmo para imprimir os 
10 primeiros números inteiros maiores que 100. 
*/

let i = 1010
let a = i + 10

if (i > 100) {
    for (i; i < a; i++) {
        console.log(i)
    }
} else {
    console.log('Número menor ou igual a 100')
}


